<% include partials/academicstaff_header %>
<div class="container">
	<h1>All Modules</h1>
     <table class="table table-striped table-hover table-staff table-bordered">
      <thead>
         <tr>
            <th>Module Code</th>
            <th>Module Name</th>
            <th>Credits</th>
            <th>Teaching Staff</th>
            <th>Assessors</th>
         </tr>
      </thead>
      <tbody>
         <% rows.forEach(function(row){ %>
         <tr>
            <td> <%= row.ModuleCode %> </td>
            <td> <%= row.ModuleName %> </td> 
            <td> <%= row.Credits %> </td>

            <td>
            <% row.TeachingStaff.forEach(function(staffMember){ %> 
            <%= staffMember['FirstName'] %>, <%= staffMember['LastName'] %> <br>
            <%});%>
            </td>

            <td>
            <% row.AssessingStaff.forEach(function(staffMember){ %> 
            <%= staffMember['FirstName'] %>, <%= staffMember['LastName'] %> <br>
            <%});%>
            </td>
         </tr>
         <% });%>
      </tbody>
   </table>
</div>
<% include partials/footer %>