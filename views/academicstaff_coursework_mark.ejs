<% include partials/academicstaff_header %>
<div class="container">
   <%if (studentsEnrolled.length != 0 ){%>
   <h1>Mark coursework</h1>
   <table class="table table-striped table-hover table-staff table-bordered">
      <thead>
         <tr>
            <th>Student id</th>
            <th>Max Mark</th>
            <th>Raw mark</th>
         </tr>
      </thead>
      <tbody>
         <% studentsEnrolled.forEach(function(student){ %>
         <tr>
            <td> <%= student.id %> </td>
            <td> <%= cwkInfo.MaxMark %> </td>
            <td>
               <form class="form-inline" method="POST" action="/academicstaff/coursework/mark/submit/<%=student.id %>/<%=cwkInfo.id%>">
                  <div class="form-group">
                     <div class="col-sm-2">
                        <input type="number" class="form-control" id="rawMark" name="RawMark" min="0" max="<%= cwkInfo.MaxMark %>"/>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" id="uploadRawMark" class="btn btn-default">Submit</button>
                     </div>
                  </div>
               </form>
            </td>
         </tr>
         <% });%>
      </tbody>
   </table>
   <%} else{ %>
   <h1>No students to mark!</h1>
   <%}%>
</div>
<% include partials/footer %>