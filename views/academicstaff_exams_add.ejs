<% include partials/academicstaff_header %>
<div class="container">
   <h1>Add exam</h1>
   <form ref='uploadForm' encType="multipart/form-data" class="form-horizontal" action="/academicstaff/exams/upload" method="post">
      <div class="form-group">
         <label class="control-label col-sm-2" for="modules">Module:</label>
         <div class="col-sm-2">
            <select class="form-control" id="modules" name="ModuleCode">
               <%modules.forEach(function(module){%>
               <option><%= module['ModuleCode'] %> </option>
               <%})%>
            </select>
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="weighting" >Weighting(%):</label>
         <div class="col-sm-2">
            <input type="number" class ="form-control" name="Weighting" id="weighting" min="1" max="100">   
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="maxMark" >Max Mark:</label>
         <div class="col-sm-2">
            <input type="number" class ="form-control" name="MaxMark" id="maxMark" min="1" max="120">      
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="examFile" >File:</label>
         <div class="col-sm-4">
            <input type="file" name = "ExamFile" class ="form-control" id ="examFile" value=""> 
            <span id="wrongFormatMessage" class="help-block">Exam file must be a PDF!</span>
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" id="uploadExam" class="btn btn-default" disabled="disabled">Upload</button>
         </div>
      </div>
   </form>
</div>
<% include partials/footer %>