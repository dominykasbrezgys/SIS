<% include partials/student_header %>
<div class="container">
	<% if (data.length == 0) {%>
		<h1>No exam results to display</h1>
	<%} else{%>
		<h1>Exams</h1>
			<%levels.forEach(function(level){%>
				<h2>Level <%=level%></h2>
				<table class="table table-striped table-hover table-student table-bordered">
      				<thead>
         				<tr>
            				<th>Module Code</th>
            				<th>Module Name</th>
         					<th>Weighting %</th>
            				<th>Max Mark</th>
            				<th>Raw Mark</th>
            				<th>% Mark</th>
            				<th>% of Module</th>
            			</tr>
				    </thead>
				    	<tbody>
				        		<%data.forEach(function(entry){%>
				        			<% if(entry['Level'] == level){%>
					        			<tr>
							            	<td> <%= entry['ModuleCode'] %> </td>
							            	<td> <%= entry['ModuleName'] %> </td>
							            	<td> <%= entry['Weighting'] %> </td>
							            	<td> <%= entry['MaxMark'] %> </td>
							            	<td> <%= entry['RawMark'] %> </td>
							            	<td> <%= Math.round(entry['RawMark']*100/entry['MaxMark'] *10) /10%>  </td>
							            	<td> <%= Math.round((entry['Weighting'] *(entry['RawMark']*100/entry['MaxMark']/100)) * 10) / 10%> </td>
							            </tr>
						            <%}%>
					            <%})%>
				      	</tbody>
				</table>
			<%})%>
	<%}%>
</div>
<% include partials/footer %>
