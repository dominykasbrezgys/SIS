<div class="container">
   <h1>Coursework</h1>
   <form ref='uploadForm' encType="multipart/form-data" class="form-horizontal" action="/academicstaff/uploadCwk" method="post">
      <div class="form-group">
         <label class="control-label col-sm-2" for="modules">Module:</label>
         <div class="col-sm-2">
            <select class="form-control" id="modules" name="module">
               <%modules.forEach(function(module){%>
               <option><%= module['ModuleCode'] %> </option>
               <%})%>
            </select>
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="no">Coursework Number:</label>
         <div class="col-sm-2">
            <input type="number" class ="form-control" id = "no" name="cwkNumber" min="1" max="5">      
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="w" >Weighting:</label>
         <div class="col-sm-2">
            <input type="number" class ="form-control" name="cwkWeighting" id="w" min="1" max="100">   
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="maxM" >Max Mark:</label>
         <div class="col-sm-2">
            <input type="number" class ="form-control" name="maxMark" id="maxM">      
         </div>
      </div>
      <div class="form-group">
         <label class="control-label col-sm-2" for="file" >File:</label>
         <div class="col-sm-4">
            <input type="file" name = "cwk" class ="form-control" id ="file" value=""> 
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Upload</button>
         </div>
      </div>
   </form>
</div>
